
<div class="right-1 cursor-pointer hamburger md:hidden">
    <span class="w-4 h-[3px] mb-[8px] bg-theme-1 block"></span>
    <span class="w-6 h-[3px] mb-[8px] bg-theme-1 block"></span>
    <span class="w-8 h-[3px] bg-theme-1 block"></span>
</div>
<script>
    const hamburger = document.querySelector('.hamburger');
    if (hamburger) {
        hamburger.addEventListener('click', () => {
            const navLinks = document.querySelector('.nav-links');
            if (navLinks) {
                navLinks.classList.toggle('hidden');
            }
        });
    }
</script>
