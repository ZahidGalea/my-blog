---
import BaseLayout from "../layouts/BaseLayout.astro";

export async function getStaticPaths() {
    const allPosts = await Astro.glob('./posts/*.mdx');
    const posts = allPosts.filter((post) => !post.frontmatter.draft && post.frontmatter.title);

    return posts.map((post) => ({
        params: {
            slug: post.frontmatter.slug,
        },
        props: {post},
    }));
}

const {post}: any = Astro.props;
---

<BaseLayout pageTitle={post.frontmatter.title}>
    <div class="pb-12 mx-auto max-w-3xl prose mt-20 prose-md dark:prose-invert dark:prose-h1:text-theme-2 dark:prose-h2:text-theme-3 prose-headings:font-bold prose-a:text-theme-4">
        <post.Content/>
    </div>
</BaseLayout>

